{
  "name": "appreadertts",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "server": "python tts-server.py",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "build": "expo export --platform web",
    "build:prod": "EXPO_PUBLIC_TTS_URL=$BACKEND_URL expo export --platform web",
    "deploy": "npm run build && vercel --prod",
    "preview": "npx serve dist"
  },
  "dependencies": {
    "expo": "~54.0.25",
    "expo-av": "^14.0.7",
    "expo-speech": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "typescript": "~5.9.2"
  },
  "private": true
}
